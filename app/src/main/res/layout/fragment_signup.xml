<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0096ff"
    tools:context=".SignupFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="25dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/signupActivityEmailTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="16dp"
                android:inputType="textEmailAddress"
                android:hint="@string/pleaseEnterYourEmail"
                android:textColorHint="#0096ff"
                android:textAlignment="center"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/signupActivityEditTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:inputType="textPassword"
                android:hint="@string/pleaseEnterYourPassword"
                android:textColorHint="#0096ff"
                android:textAlignment="center"
                android:importantForAutofill="no" />

            <CheckBox
                android:id="@+id/signUpActivityShowPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="130dp"
                android:layoutDirection="rtl"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="@string/show_password" />

            <Button
                android:id="@+id/signupActivityBtnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/button_color"
                android:text="@string/signUp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>